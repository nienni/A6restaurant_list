<form action="/restaurants" method="POST">
  <h1 class="mb-1 restaurant-show-title"><input type="text" placeholder="請輸入餐廳名稱" name="name"></h1>
  <div class="container">
    <div class="row">
      <div class="col-12 col-md-10 mx-auto">

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-utensils pr-2"></i>
            類別：
          </span>
          <input type="text" placeholder="請輸入餐廳類型" name="category">
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-map-marker-alt pr-2"></i>
            地址：
          </span>
          <input type="text" placeholder="請輸入餐廳地址" name="location">
          <a href="https://goo.gl/maps/V9mKwVJ4s5v" class="text-secondary" target="_blank">
            <i class="fas fa-location-arrow pr-2 fa-xs"></i>
          </a>
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-mobile-alt pr-2"></i>
            電話：
          </span>
          <input type="text" placeholder="請輸入餐廳電話" name="phone">
        </p>

        <p class="mb-5">
          <input type="text" placeholder="請輸入餐廳介紹或備註" name="description">
        </p>

        <p class="mb-5">
          <input type="number" placeholder="請輸入0-5評分" name="rating">
        </p>

        <input type="text" placeholder="請輸入餐廳圖片網址" name="image">

        <img class="rounded mx-auto d-block mb-4 w-100"
          src="https://previews.123rf.com/images/koltukovalek/koltukovalek1611/koltukovalek161100002/68038278-question-mark-sign-colored-icon-help-colorful-symbol-faq-sign-vector-facet-logo-.jpg"
          alt="" style="max-width: 600px;">

        <button type="submit">按下按鈕新增餐廳</button>
      </div>
    </div>
  </div>

</form>