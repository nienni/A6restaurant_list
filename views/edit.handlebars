<form action="/restaurants/{{{restaurant._id}}}" method="POST">
  <h1 class="mb-1 restaurant-show-title"><input type="text" placeholder="餐廳名稱" value="{{{restaurant.name}}}"
      name="name"></h1>
  <div class="container">
    <div class="row">
      <div class="col-12 col-md-10 mx-auto">

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-utensils pr-2"></i>
            類別：
          </span>
          <input type="text" placeholder="餐廳類別" value="{{{restaurant.category}}}" name="category">
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-map-marker-alt pr-2"></i>
            地址：
          </span>
          <input type="text" placeholder="餐廳地點" value="{{{restaurant.location}}}" name="location">
          <a href="https://goo.gl/maps/V9mKwVJ4s5v" class="text-secondary" target="_blank">
            <i class="fas fa-location-arrow pr-2 fa-xs"></i>
          </a>
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-mobile-alt pr-2"></i>
            電話：
          </span>
          <input type="text" placeholder="餐廳電話" value="{{{restaurant.phone}}}" name="phone">
        </p>

        <p class="mb-5">
          <input type="text" placeholder="餐廳描述" value="{{{restaurant.description}}}" name="description">
        </p>

        <p class="mb-5">
          <input type="number" placeholder="餐廳評分0-5星" value="{{{restaurant.rating}}}" name="rating">
        </p>

        <input type="text" placeholder="餐廳圖片網址" value="{{{restaurant.image}}}" name="image">

        <img class="rounded mx-auto d-block mb-4 w-100" src="{{{restaurant.value}}}" alt="" style="max-width: 600px;">

        <button type="submit">編輯完成</button>
      </div>
    </div>
  </div>
</form>